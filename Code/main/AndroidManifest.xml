<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stuar">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_logo_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_logo_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.STUAR">
        <activity android:name=".ConnectionError"></activity>
        <activity
            android:name=".JoiningGroup"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DevTools"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Notifications"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewGrades"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GroupsGrading"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Grading"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LecturerHub"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectedStudentAssign"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListStudentAssign"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StudentHub"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LogInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>